<div class="main-area clearfix">
	<!-- カート上部 -->
	<div class="cart-top col-xs-12">
		<div class="col-xs-6">
			<h2 class="cart-title">ショッピングカート</h2>
		</div>
			<div class="col-xs-3">
					<% @sum = 0 %>
					<% @item_select.each do |item| %>
						<% @sum += item.price %>
					<% end %>
					<p class="payment-text">
						合計：￥ <%= @sum %>
					</p>
			</div>
			<div class="buy-button-area col-xs-2">
				<button type="button" class="btn btn-warning buy-button">
					購入ページへ
				</button>
			</div>
	</div>
	<!-- 商品１ -->
	<% @item_select.each do |item| %>
	<div class="cart-item col-xs-12">
		<div class="item-image col-xs-3">
			<%= attachment_image_tag item, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
		</div>
		<div class="col-xs-9">
			<div class="item-text col-xs-12">
				<%= item.item_name %>
			</div>
			<div class="col-xs-5">
				<%= form_tag(user_item_select_path(item.id), method: :delete) do %>
                	<%= submit_tag("この商品をカートから削除") %>
                <% end %>
			</div>
			<div class="col-xs-5">
				<table width="300">
					<thead>
						<tr>
							<th>単価</th>
							<th>数量</th>
							<th>小計</th>
						</tr>
					</thead>
					<tbody>
						<tr>
								<td>¥ <%= item.price %></td>
								<td> <%= %></td>
								<td>¥ <%= item.price %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<% end %>

	<!-- カート下部 -->
	<div class="col-xs-6"></div>
	<div class="col-xs-2">
		<button type="button" class="btn btn-warning">
			購入ページへ
		</button>
	</div>
	<div class="total-area col-xs-4">
		<p class="payment-text2">
			合計：￥ <%= @sum %>
		</p>
	</div>
</div>