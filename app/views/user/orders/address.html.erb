<h1>新規配送先追加フォーム</h1>
<%= form_for [:user, @new_address], url: user_create_order_address_path, html: {method: :post} do |add| %>

	<h4>名前</h4>

	<%= add.text_field :last_name %>
	<%= add.text_field :first_name %>

	<h4>住所</h4>
	<%= add.text_field :street_address ,size:70%>

	<h4>郵便番号</h4>
	<%= add.text_field :postal_code ,size:70%>

	<h4>電話番号</h4>
	<%= add.text_field :phone_number ,size:70%>
	<br><br>
	
	<%= add.submit '追加', class: "btn btn-default" %>
	<button type="button" onclick="history.back()" class="btn btn-default">戻る</button>
<% end %>