<main class="clearfix">
<!-- エラーメッセージがあれば表示する -->
<% if @new_address.errors.any? %>
	<div class="error-message-area">
		<h2><%= @new_address.errors.count %> errors prohibited this obj from being saved:</h2>
		<ul  class="error-detail">
			<% @new_address.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<h1>新規住所追加</h1>
<%= form_for [:user, @new_address] do |a| %>

	<h4>名前</h4>

	<%= a.text_field :last_name %>
	<%= a.text_field :first_name %>

	<h4>住所</h4>
	<%= a.text_field :street_address ,size:70%>

	<h4>郵便番号</h4>
	<%= a.text_field :postal_code ,size:70%>

	<h4>電話番号</h4>
	<%= a.text_field :phone_number ,size:70%>
	<br><br>
	
	<%= a.submit '追加', class: "btn btn-primary" %>
	<%= link_to '戻る', user_addresses_path, class: "btn btn-default"%>
<% end %>
</main>