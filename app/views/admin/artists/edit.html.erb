<div class = "col-xs-9">
		<% if flash[:notice] %>
      <div class="alert alert-danger">
        <%= flash[:notice] %>
      </div>
      <% end %>
	<h1>アーティスト編集</h1>
		<%= form_for(@artist, url: admin_artist_path) do |f| %>
			<br>
			<div class="row">
				<br>
				<div class="col-xs-6">
				<label>アーティスト名</label>
				<%= f.text_field :artist_name, class:'form-control', :placeholder => "アーティスト名を入力" %>
				</div>
				</<div>
			</div>
				<br>
				<br>
		<%= f.submit "編集", class: "btn btn-primary" %>
		<% end %>
</div>
</div>
