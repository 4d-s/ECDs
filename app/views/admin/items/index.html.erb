<h1>All Items</h1>


<% @items.each do |item| %>

<div class="item-box">
	<%= link_to admin_item_path(item.id) do%>
	<div class ="item-contents">
		<%= attachment_image_tag item, :image_id,  size: "200x200", fallback: "no_image.jpg" %><br>
		<%= item.item_name %><br>
		<%= item.price %>円（税別）<br>
		<% if item.stock > 0 %>
		<p>在庫　あり</p>
		<%else%>
		<p>在庫　なし</p>
		<%end%>
	</div>
	<% end %>
</div>
<% end %>
<%= paginate @items, class: "paginate" %>
