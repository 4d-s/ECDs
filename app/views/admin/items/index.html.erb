<main class="col-xs-9">
	<h1 class="addmin-item-index">All Items</h1>
	<% @items.each do |item| %>
	<div class="addmin-item-box">
		<div class ="addmin-item-contents">
			<%= link_to admin_item_path(item.id) do%>
			<%= attachment_image_tag item, :image,  size: "200x200", fallback: "no_image.jpg" %><br>
			<%= item.item_name %><br>
			<%= item.price %>円（税別）<br>
			<% if item.stock > 0 %>
			<p>在庫　あり</p>
			<%else%>
			<p>在庫　なし</p>
			<%end%>
		</div>
		<% end %>
	</div>
	<% end %>
</main>
<div class="addmin-paginate-items">
	<%= paginate @items, class: "paginate" %>
</div>