    <div class="item-edit-form">
      <div class="item-edit-text">
          <%= form_for @item, url:admin_items_path do |item| %>

          <div class="field">
          <br>
          <label>シングル/アルバム名</label>
          <br>
          <%= item.text_field :item_name %>
          <br>
          <label >価格</label>
          <br>
          <%= item.text_field :price %>
          <br>
          <label >在庫数</label>
          <br>
          <%= item.text_field :stock %>
          <br>
          <label >販売ステータス</label>
          <br>
        <div class="container">
          <div class="radio">
            <input id="radio-1" name="radio" type="radio" checked>
            <label for="radio-1" class="radio-label">販売中<%= item.radio_button :is_sold, 'true' %></label>
          </div>
          <div class="radio">
          <input id="radio-2" name="radio" type="radio">
          <label for="radio-2" class="radio-label">販売中止<%= item.radio_button :is_sold, 'false' %></label>
          </div>
        </div>
          <br>

          <label >画像</label>
          <br>
            <%= item.attachment_field :image %>
          <br>
          <label>アーティスト</label>
            <%= item.collection_select :artist_id, Artist.all, :id, :artist_name, :include_blank => true %>
            <%= link_to "登録", new_admin_artist_path, class: "btn btn-primary" %>
          <br>
          <label>レーベル</label>
            <%= item.collection_select :label_id, Label.all, :id, :label_name,  :include_blank => true %>
            <%= link_to "登録", new_admin_label_path, class: "btn btn-primary" %>
          <br>
          <label>ジャンル</label>
            <%= item.collection_select :genre_id, Genre.all, :id, :genre_name,  :include_blank => true %>
            <%= link_to "登録", new_admin_genre_path, class: "btn btn-primary" %>
          <br>
          </div>
          <br>
        <div class ="field">
          <%= item.fields_for :discs do |disc| %>
          <div class="discs">
              <%= render 'disc_fields', f: disc  %>
          <% end %>
            <div class="links">
              <%= link_to_add_association 'DISC追加', item, :discs %>
            </div>
            <div class="actions">
              <%= item.submit %>
            </div>
          </div>
          <% end %>
        </div>
    </div>
  </div>