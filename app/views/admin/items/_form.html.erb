    <div class="item-edit-form">
      <div class="item-edit-text">
          <%= form_for @item, url:admin_items_path do |item| %>

          <div class="field">
          <br>
          <label>商品名</label>
          <br>
          <%= item.text_field :item_name %>
          <br>
          <label >価格</label>
          <br>
          <%= item.text_field :price %>
          <br>
          <label >在庫数</label>
          <br>
          <%= item.text_field :stock %>
          <br>
          <label >販売ステータス</label>
          <br>
          <p>販売中表示</p>
          <%= item.check_box :is_sold %>
          <br>
          <label >画像</label>
          <br>
            <%= item.attachment_field :image %>
          <br>
          <label>アーティスト</label>
            <%= item.collection_select :artist_id, Artist.all, :id, :artist_name, :include_blank => true %>
          <label>レーベル</label>
            <%= item.collection_select :label_id, Label.all, :id, :label_name,  :include_blank => true %>
            <label>ジャンル</label>
            <%= item.collection_select :genre_id, Genre.all, :id, :genre_name,  :include_blank => true %>
          </div>
          <br>
        <div class ="field">
          <%= item.fields_for :discs do |disc| %>
          <div class="discs">
              <%= render 'disc_fields', f: disc  %>
          <% end %>
            <div class="links">
              <%= link_to_add_association 'add disc', item, :discs %>
            </div>
            <div class="actions">
              <%= item.submit %>
            </div>
          </div>
          <% end %>
        </div>
    </div>
  </div>