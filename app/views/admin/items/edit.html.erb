							</div>
							<h3>在庫数</h3>
							<%= f.text_feild :stock %>個
						<% end %>

						<h3>アーティスト名</h3>
						<% form_for [:admin, @artist] do |f| %>
							<%= f.text_field :artist_name %>
						<% end %>

						<h3>レーベル</h3>
						<% form_for [:admin, @label] do |f|%>
							<%= f.text_feild :label_name %>
						<% end %>

