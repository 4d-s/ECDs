<div class="nested-fields">
    <div class="field">
      <%= f.label :"ディスク番号" %>←<%= link_to_remove_association "ディスクの削除（ディスクの中身も）", f %>
      <br/>
      <%= f.text_field :disc_number %>
    </div>
  <div class="songs">
      <%= f.fields_for :songs do |song| %>
        <%= render 'song_fields', f: song %>
      <%end%>
      <div class="links">
        <%= link_to_add_association "曲の追加", f, :songs %>
      </div>
  </div>
</div>