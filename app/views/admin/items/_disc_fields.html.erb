<div class="nested-fields">
    <div class="field">
      <div class="row">
        <br>
        <%= f.label :ディスク番号 %>
        <br>
        <div class="col-xs-6">
        <%= f.text_field :disc_number, class:'form-control',:placeholder => "ディスク番号を入力　※半角数字" %>
        </div>
        <br>
      </div>
    <%= link_to_remove_association "ディスクの削除", f, class: "btn-danger " %>
    </div>
    <br>
  <div class="songs">
      <%= f.fields_for :songs do |song| %>
        <%= render 'song_fields', f: song %>
      <%end%>
      <div class="links">
      <%= link_to_add_association "曲の追加", f, :songs, class: "btn-primary" %>
      </div>
  </div>
</div>