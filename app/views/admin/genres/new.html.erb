 <div class = "col-xs-9">
	  <% if flash[:notice] %>
      <div class="alert alert-danger">
        <%= flash[:notice] %>
      </div>
      <% end %>
<h1>ジャンル登録</h1>
	<%= form_for(@genre, url: admin_genres_path) do |f| %>
		<br>
		<div class="row">
			<br>
			<div class="col-xs-6">
				<label>ジャンル名</label>
				<%= f.text_field :genre_name, class:'form-control', :placeholder => "ジャンル名を入力" %>
			</div>
		</div>
		<br>
		<br>
		<%= f.submit "登録", class: "btn btn-primary" %>
		<% end %>
</div>
