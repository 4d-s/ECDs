<div class="login panel panel-primary box-shadow">
  <br>
  <h2>ログイン（管理者専用）</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8">
      <label>メールアドレス</label>
      <br>
      <%= f.email_field :email, autofocus: true, class:'form-control', :placeholder => "管理者専用メールアドレスを入力" %>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8">
      <b>パスワード　</b>
      <%= f.password_field :password, class:'form-control', :placeholder => "管理者専用パスワードを入力" %>
      <br>
      <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      </div>
    </div>
    <% end %>
    <br>
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary"  %>
    </div>
  <% end %>
  <br>  
</div>