
<main class="clearfix">

      <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
      <% end %>

  <h2>会員登録</h2>
  <div class="user-form">
    <div class="text">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <br>
      <div>
      <div class="row">
            <div class="col-xs-6">
            <label>ユーザー名</label>
            <br>
            <%= f.text_field :name, autofocus: true, class:'form-control', placeholder:"※空欄不可" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
                  <label>姓</label>
                  <br>
                  <%= f.text_field :last_name, autofocus: true, autofocus: true, class:'form-control', placeholder:"※全角" %>
                  <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>名</label>
            <br>
            <%= f.text_field :first_name, autofocus: true, autofocus: true, class:'form-control', placeholder:"※全角" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>姓（カタカナ）</label>
            <br>
            <%= f.text_field :last_name_katakana, autofocus: true, autofocus: true, class:'form-control', placeholder:"※全角カタカナ" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>名（カタカナ）</label>
            <br>
            <%= f.text_field :first_name_katakana, autofocus: true, autofocus: true, class:'form-control', placeholder:"※全角カタカナ" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>住所</label>
            <br>
            <%= f.text_field :street_address, autofocus: true, autofocus: true, class:'form-control', placeholder: "※全角" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>郵便番号</label><br>
            <%= f.text_field :postal_code, autofocus: true, autofocus: true, class:'form-control', placeholder:"※半角数字　ハイフンなし" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>電話番号</label><br>
            <%= f.text_field :phone_number, autofocus: true, autofocus: true, class:'form-control', placeholder:"※半角数字　ハイフンなし" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>メールアドレス</label><br>
            <%= f.email_field :email, autofocus: true, autofocus: true, class:'form-control', placeholder:"ECD's@ec.com" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>パスワード</label><br>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上必須)</em>
            <% end %><br />
            <%= f.password_field :password, autofocus: true, class:'form-control', placeholder:"※半角　英数字" %>
            <br>
            </div>
      </div>
      <div class="row">
            <div class="col-xs-6">
            <label>パスワード再入力</label><br>
            <%= f.password_field :password_confirmation, autofocus: true, class:'form-control', placeholder:"※半角　英数字" %>
            <br>
            </div>
      </div>
      <div class="actions">
      <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</main>
