  <h2>アカウント登録</h2>
<div class="user-form">
  <div class="text">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <br>
      <div>
      <label>ユーザー名</label>
      <br>
      <%= f.text_field :name, autofocus: true, placeholder:"※空欄不可" %>
      <br>
      </div>
      <div>
      <label>姓</label>
      <br>
      <%= f.text_field :last_name, autofocus: true, placeholder:"※全角" %>
      <br>
      </div>
      <div>
      <label>名</label>
      <br>
      <%= f.text_field :first_name, autofocus: true, placeholder:"※全角" %>
      <br>
      </div>
      <div>
      <label>姓（カタカナ）</label>
      <br>
      <%= f.text_field :last_name_katakana, autofocus: true, placeholder:"※全角カタカナ" %>
      <br>
      </div>
      <div>
      <label>名（カタカナ）</label>
      <br>
      <%= f.text_field :first_name_katakana, autofocus: true, placeholder:"※全角カタカナ" %>
      <br>
      </div>
      <div>
      <label>住所</label>
      <br>
      <%= f.text_field :street_address, autofocus: true, placeholder: "※全角" %>
      <br>
      </div>
      <div>
      <label>郵便番号</label><br>
      <%= f.text_field :postal_code, autofocus: true, placeholder:"※半角数字　ハイフンなし" %>
      <br>
      </div>
      <div>
      <label>電話番号</label><br>
      <%= f.text_field :phone_number, autofocus: true, placeholder:"※半角数字　ハイフンなし" %>
      <br>
      </div>
      <div>
      <label>メールアドレス</label><br>
      <%= f.email_field :email, autofocus: true, placeholder:"ECD's@ec.com" %>
      <br>
      </div>
      <div>
      <label>パスワード</label><br>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上必須)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder:"※半角　英数字" %>
      <br>
      </div>
      <div>
      <label>パスワード再入力</label><br>
      <%= f.password_field :password_confirmation, placeholder:"※半角　英数字" %>
      <br>
      </div>
      <div class="actions">
      <%= f.submit "登録", class: "btn btn-default" %>
      </div>
      <% end %>
    <br>
</div>
</div>
