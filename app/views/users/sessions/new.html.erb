<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="notice"><%= alert %></p>
<% end %>

<main class="clearfix ">
  <div class="login-box">
  <div class="login panel panel-primary box-shadow ">
  <h2 align="center">ログイン</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8">
        <label>メールアドレス</label><br>
        <%= f.email_field :email, autofocus: true, class:'form-control', :placeholder => "メールアドレスを入力" %>
      </div>
    </div>
      <br>
    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8">
      <label>パスワード</label><br>
      <%= f.password_field :password, class:'form-control', :placeholder => "パスワードを入力 ※６文字以上" %>
      </div>
    </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
  <% end %>
  <br>
</div>
</div>
</main>