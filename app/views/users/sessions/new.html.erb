
<div class="center">
  <h2>ログイン</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <b>Email</b>
    <%= f.email_field :email, autofocus: true, autocomplete: "name" %>
  </div>
  <br>
  <div class="field">
    <b>パスワード</b>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  <% end %>
</div>